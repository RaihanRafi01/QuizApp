
@{
    ViewBag.Title = "AddQuiz";
}

<h2>AddQuiz</h2>

<form method="post">
    <table class="table-bordered">
        <tr>
            <td colspan="4">
                Question:
                <input type="text" name="Ques" placeholder="" class="form-control" />
            </td>
        </tr>
        <tr>
            <td>
                Option1: <input type="text" name="Option1" placeholder="" class="form-control" /> <input type="radio" id="1" name="RightQues" value=1>
